<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vbh.virtualboathouse.DisplayTimersActivity" >
    <ScrollView android:id="@+id/timers_list_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp">
        <LinearLayout android:id="@+id/timers_list"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:divider="?android:dividerHorizontal"
	        android:showDividers="middle">
	    </LinearLayout>
    </ScrollView>
    <RelativeLayout 
        android:id="@+id/timer_controls_rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000" >
		<LinearLayout
		    android:id="@+id/timer_controls"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
		    <Button android:id="@+id/start_all_button"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:text="@string/start_all" ></Button>
		    <Button android:id="@+id/stop_all_button"
		        android:layout_width="0dp"
		        android:layout_weight="1" 
		        android:layout_height="wrap_content"
		        android:text="@string/stop_all"></Button>
		    <Button android:id="@+id/save_times_button"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1.3"
		        android:text="@string/save_times" />
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>	