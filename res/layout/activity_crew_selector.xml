<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.vbh.virtualboathouse.CrewSelectorActivity"
    tools:ignore="MergeRootFrame" >
    
    <LinearLayout android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center_horizontal"
	    android:id="@+id/lineup_checklist">
	</LinearLayout>
    
    <Button android:id="@+id/go_button"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" 
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:text="@string/button_go"
        android:layout_centerHorizontal="true"/>
    
    <TextView android:id="@+id/crew_selector_instructions_text"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" 
        android:layout_above="@id/go_button"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:padding="10dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/text_gray"
        android:text="@string/crew_selector_instructions"
        android:layout_centerHorizontal="true"/>
    
    
</RelativeLayout>
